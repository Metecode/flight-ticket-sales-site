<nav class="navbar-fixed-top navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color:#C80A11;">
    <div class="container logo">
        <a class="navbar-brand logo text-white " asp-area="" asp-controller="Home" asp-action="Index">

            <img src="/images/logo1.png" width="100" />

        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between fw-bold">
            <ul class="navbar-nav flex-grow-1">

                @if (User.Identity.IsAuthenticated)
                {
                    @if (User.IsInRole("Admin"))
                    {

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Admin" asp-action="AllTripList">@_localization.Getkey("Trips").Value</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Admin" asp-action="CityList">@_localization.Getkey("Cities").Value</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Admin" asp-action="AirplaneList">@_localization.Getkey("AirplaneList").Value</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Admin" asp-action="TicketList">@_localization.Getkey("Tickets").Value</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Admin" asp-action="UserList">@_localization.Getkey("Users").Value</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Admin" asp-action="RoleList">@_localization.Getkey("Roles").Value</a>
                        </li>
                    }

                }
            </ul>
            <ul class="navbar-nav">
                @if (!User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Login">@_localization.Getkey("Login").Value</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Register">@_localization.Getkey("Register").Value</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Admin" asp-action="RoleList">@User.Identity.Name</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Logout">@_localization.Getkey("Logout").Value</a>
                    </li>
                }
            </ul>
            <ul>
                <div class="btn-group">
                    <button type="button"
                            class="btn btn-primary dropdown-toggle"
                            data-bs-toggle="dropdown"
                            aria-haspopup="true"
                            aria-expanded="false">
                        <i class="flag-icon flag-icon-gb"></i> English
                    </button>
                    <div class="dropdown-menu">
                        <a asp-controller="Home"
                           asp-action="ChangeLanguage"
                           asp-route-culture="en-US"
                           class="dropdown-item">
                            <i class="flag-icon flag-icon-gb"></i> English
                        </a>
                        <a asp-controller="Home"
                           asp-action="ChangeLanguage"
                           asp-route-culture="tr-TR"
                           class="dropdown-item">
                            <i class="flag-icon flag-icon-tr"></i> Türkçe
                        </a>
                    </div>
                </div>

            </ul>
        </div>
           
    </div>
