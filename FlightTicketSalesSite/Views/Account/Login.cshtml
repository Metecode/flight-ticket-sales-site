@model LoginModel
<h1>Login</h1>
<hr />
<form asp-controller="Account" asp-action="Login" method="post">
	<input type="hidden" asp-for="ReturnUrl" value=@ViewBag.ReturnUrl />
	<div class="row fw-bold">
		<div class="col-md-12">
			<div class="form-group row mb-2">
				<div class="col-md-2">
					<label asp-for="Email">@_localization.Getkey("Email").Value</label>
				</div>
				<div class="col-md-10">
					<input type="text" asp-for="Email" />
				</div>
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
			<div class="form-group row mb-2">
				<div class="col-md-2">
					<label asp-for="Password">@_localization.Getkey("Password").Value</label>
				</div>
				<div class="col-md-10">
					<input asp-for="Password" />
				</div>
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
			<div class="form-group row mb-2">
				<div class="col-md-10 offset-2">
					<input type="checkbox" asp-for="RememberMe" checked />
					<label>@_localization.Getkey("Remember Me").Value</label>
				</div>
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>

			<div class="form-group row mb-2">
				<div class="col-md-10 offset-2">
					<button class="btn btn-continue" style="width:211px" type="submit">@_localization.Getkey("Login").Value</button>
				</div>
				<div class="col-md-10 offset-2 mt-2" >
					<a asp-action="ForgotPassword" class="btn btn-warning" style="width:211px"> @_localization.Getkey("Forgot Password").Value</a>
				</div>
			</div>
		</div>
	</div>
</form>

@section Scripts{
	@await Html.PartialAsync("_ValidationScriptsPartial")
}